{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@hyperpolymath/system-tools-contracts",
  "version": "1.0.0",
  "exports": {
    ".": "./mod.js",
    "./schemas": "./schemas/mod.js"
  },
  "tasks": {
    "test": "deno test --allow-read tests/",
    "test:watch": "deno test --allow-read --watch tests/",
    "validate": "deno run --allow-read scripts/validate-schemas.js",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check mod.js"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "ajv": "npm:ajv@^8.17.0",
    "ajv-formats": "npm:ajv-formats@^3.0.0"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
