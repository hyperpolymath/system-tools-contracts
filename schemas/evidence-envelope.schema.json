{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/hyperpolymath/system-tools-contracts/schemas/evidence-envelope.schema.json",
  "title": "Evidence Envelope",
  "description": "Core data contract for A&E intake and Operating Theatre scans. Contains run metadata, artifact references, and redaction hints.",
  "type": "object",
  "required": ["version", "envelope_id", "created_at", "source", "artifacts"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Schema version (semver)"
    },
    "envelope_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this envelope"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of envelope creation"
    },
    "source": {
      "type": "object",
      "description": "Origin of the scan/intake",
      "required": ["tool", "host"],
      "properties": {
        "tool": {
          "type": "string",
          "enum": ["big-up", "ambient", "a-and-e", "sysobs", "psa"],
          "description": "Which tool produced this envelope"
        },
        "tool_version": {
          "type": "string",
          "description": "Version of the producing tool"
        },
        "host": {
          "type": "object",
          "required": ["hostname"],
          "properties": {
            "hostname": { "type": "string" },
            "os": { "type": "string" },
            "os_version": { "type": "string" },
            "arch": { "type": "string" }
          }
        },
        "profile": {
          "type": "string",
          "description": "Scan profile used (e.g., 'quick', 'full', 'custom')"
        },
        "pack": {
          "type": "string",
          "description": "Pack name if applicable (e.g., 'windows-tech-support')"
        }
      }
    },
    "artifacts": {
      "type": "array",
      "description": "References to collected evidence artifacts",
      "minItems": 1,
      "maxItems": 1000,
      "items": {
        "type": "object",
        "required": ["artifact_id", "type", "path"],
        "properties": {
          "artifact_id": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "type": "string",
            "enum": ["snapshot", "log", "config", "metric", "screenshot", "report", "diff", "other"],
            "description": "Category of artifact"
          },
          "path": {
            "type": "string",
            "description": "Relative path within run bundle",
            "pattern": "^(?!.*\\.\\.)(?!.*//)[a-zA-Z0-9_./@-]+$",
            "maxLength": 1024
          },
          "hash": {
            "type": "object",
            "description": "Content hash for integrity verification",
            "properties": {
              "algorithm": {
                "type": "string",
                "enum": ["sha256", "sha384", "sha512", "blake3"],
                "default": "sha256"
              },
              "value": { "type": "string" }
            },
            "required": ["algorithm", "value"]
          },
          "size_bytes": {
            "type": "integer",
            "minimum": 0
          },
          "mime_type": { "type": "string" },
          "description": { "type": "string" },
          "redaction": {
            "$ref": "#/$defs/redaction_hints"
          }
        }
      }
    },
    "findings": {
      "type": "array",
      "description": "Issues or observations discovered during scan",
      "maxItems": 500,
      "items": {
        "$ref": "#/$defs/finding"
      }
    },
    "metrics": {
      "type": "object",
      "description": "Quantitative data collected",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "value": { "type": ["number", "string", "boolean"] },
          "unit": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    },
    "redaction_profile": {
      "type": "string",
      "enum": ["none", "minimal", "standard", "maximum"],
      "default": "standard",
      "description": "Default redaction level for sharing"
    },
    "provenance": {
      "type": "object",
      "description": "Chain of custody and verification",
      "properties": {
        "parent_envelope_id": {
          "type": "string",
          "format": "uuid",
          "description": "If this envelope derives from another"
        },
        "signatures": {
          "type": "array",
          "maxItems": 10,
          "items": {
            "type": "object",
            "properties": {
              "signer": { "type": "string" },
              "algorithm": { "type": "string" },
              "signature": { "type": "string" },
              "timestamp": { "type": "string", "format": "date-time" }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "redaction_hints": {
      "type": "object",
      "description": "Guidance for redacting sensitive content",
      "properties": {
        "contains_pii": { "type": "boolean", "default": false },
        "contains_credentials": { "type": "boolean", "default": false },
        "contains_paths": { "type": "boolean", "default": true },
        "redact_fields": {
          "type": "array",
          "maxItems": 100,
          "items": { "type": "string", "maxLength": 256 },
          "description": "JSON paths to fields requiring redaction"
        },
        "safe_to_share": { "type": "boolean", "default": false }
      }
    },
    "finding": {
      "type": "object",
      "required": ["finding_id", "severity", "category", "title"],
      "properties": {
        "finding_id": { "type": "string" },
        "severity": {
          "type": "string",
          "enum": ["info", "low", "medium", "high", "critical"]
        },
        "category": {
          "type": "string",
          "enum": ["disk", "memory", "cpu", "network", "security", "config", "performance", "other"]
        },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "evidence_refs": {
          "type": "array",
          "maxItems": 50,
          "items": { "type": "string", "format": "uuid" },
          "description": "References to artifact_ids supporting this finding"
        },
        "recommendation": { "type": "string" },
        "auto_fixable": { "type": "boolean", "default": false }
      }
    }
  }
}
